podTemplate(containers: [
    containerTemplate(name: 'maven', image: 'maven:3.3.9-jdk-8-alpine', ttyEnabled: true, command: 'cat')
  ]) {

    node(POD_LABEL) {
        stage('simple-java-maven-app') {
            container('maven') {
                stage('Build') {
                    sh 'mvn -B -DskipTests clean package'
                }
                stage('Test') {
                    sh 'mvn test'
                }                
            }
        }
     }
}
